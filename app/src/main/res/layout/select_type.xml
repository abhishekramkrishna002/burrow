<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">


    <ImageView
        android:layout_width="@dimen/intro_burrow_icon_width"
        android:layout_height="@dimen/intro_burrow_icon_height"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/intro_get_view_pager_margin_bottom"
        android:background="@drawable/burrowmascot"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:padding="@dimen/intro_get_started_padding"
            android:id="@+id/btOwner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="@dimen/intro_get_started_margin_1"
            android:layout_marginRight="@dimen/intro_get_started_margin_1"
            android:layout_marginBottom="@dimen/intro_get_started_margin_2"
            android:background="@drawable/get_started_box"
            android:text="I AM AN OWNER"
            android:textColor="#fff"
            android:textSize="@dimen/intro_get_started_size" />
        <Button
            android:padding="@dimen/intro_get_started_padding"
            android:id="@+id/btTenant"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="@dimen/intro_get_started_margin_1"
            android:layout_marginRight="@dimen/intro_get_started_margin_1"
            android:layout_marginBottom="@dimen/intro_get_started_margin_2"
            android:background="@drawable/get_started_box"
            android:text="I AM AN TENANT"
            android:textColor="#fff"
            android:textSize="@dimen/intro_get_started_size" />

    </LinearLayout>

</FrameLayout>